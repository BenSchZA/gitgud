<nav class="level">
  <div class="level-left">
    <div class="level-item">
      <%= react_component "BranchSelect", repo: to_relay_id(@repo), oid: oid_fmt(@reference.oid) %>
    </div>
    <div class="level-item">
      <%= unless Enum.empty?(@tree_path) do %>
        <nav class="breadcrumb" aria-label="breadcrumbs">
          <ul>
            <li><a href="<%= codebase_path(@conn, :tree, @repo.owner, @repo, @reference.shorthand, []) %>"><%= @repo.name %></a></li>
            <%= for {path, index} <- Enum.with_index(Enum.drop(@tree_path, -1), 1) do %>
              <li><a href="<%= codebase_path(@conn, :tree, @repo.owner, @repo, @reference.shorthand, Enum.take(@tree_path, index)) %>"><%= path %></a></li>
            <% end %>
            <li class="is-active"><a href="#"><%= List.last(@tree_path) %></a></li>
            <%= if assigns[:tree] do %>
              <li></li>
            <% end %>
          </ul>
        </nav>
      <% end %>
    </div>
  </div>
</nav>
