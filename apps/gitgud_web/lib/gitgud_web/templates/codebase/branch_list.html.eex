<h2 class="subtitle">Branches</h2>

<%= with page <- paginate(@conn, @branches) do %>
  <table class="table is-fullwidth is-striped">
    <tbody>
      <%= for branch <- page.slice do %>
        <tr>
          <td>
            <a href="<%= codebase_path(@conn, :tree, @repo.owner, @repo, branch, []) %>"><%= branch.name %></a>
          </td>
          <td class="has-text-right">
            <a href="<%= codebase_path(@conn, :tree, @repo.owner, @repo, branch, []) %>" class="button is-small is-warning has-text-weight-semibold">Tree</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= pagination(page) %>
<% end %>
