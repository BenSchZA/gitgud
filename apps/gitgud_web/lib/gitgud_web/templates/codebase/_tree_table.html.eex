<table class="table is-hoverable is-fullwidth">
  <tbody>
    <%= unless Enum.empty?(@tree_path) do %>
      <tr>
        <th><a href="<%= codebase_path(@conn, :tree, @repo.owner, @repo, @reference.shorthand, Enum.drop(@tree_path, -1)) %>">..</a></th>
      </tr>
    <% end %>
    <%= for entry <- tree_entries(@tree) do %>
      <tr>
        <td><a href="<%= codebase_path(@conn, entry.type, @repo.owner, @repo, @reference.shorthand, @tree_path ++ [entry.name]) %>"><%= entry.name %></a></td>
      </tr>
    <% end %>
  <tbody>
</table>
