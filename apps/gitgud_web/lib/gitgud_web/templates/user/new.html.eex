<h1 class="title">Register</h1>

<%= form_for @changeset, Routes.user_path(@conn, :create), [as: :user], fn f -> %>
  <div class="field">
    <%= label f, :name, class: "label" %>
    <div class="control">
      <%= text_input f, :name, class: "input" %>
    </div>
    <%= error_tag f, :name %>
  </div>

  <div class="field">
    <%= label f, :username, class: "label" %>
    <div class="control">
      <%= text_input f, :username, class: "input" %>
    </div>
    <%= error_tag f, :username %>
  </div>

  <%= inputs_for f, :emails, fn fe -> %>
    <div class="field">
      <%= label fe, :email, class: "label" %>
      <div class="control">
        <%= email_input fe, :email, class: "input" %>
      </div>
      <%= error_tag fe, :email %>
    </div>
  <% end %>

  <div class="field">
    <%= label f, :password, class: "label" %>
    <div class="control">
      <%= password_input f, :password, class: "input" %>
    </div>
    <%= error_tag f, :password %>
  </div>

  <div class="field">
    <%= submit "Register", class: "button is-link" %>
  </div>
<% end %>
