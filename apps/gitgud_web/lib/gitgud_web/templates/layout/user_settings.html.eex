<%= render_layout "app.html", assigns do %>
<h1 class="title">Settings</h1>

<hr />

<div class="columns">
  <aside class="menu column is-one-fifth">
    <p class="menu-label">Account</p>
    <ul class="menu-list">
      <li>
        <%= navigation_item @conn, :user, [only: [:edit_profile, :update_profile]], :a, href: Routes.user_path(@conn, :edit_profile) do %>Profile<% end %>
      </li>
      <li>
        <%= navigation_item @conn, :email, [], :a, href: Routes.email_path(@conn, :edit) do %>Emails<% end %>
      </li>
    </ul>
    <p class="menu-label">Authentication</p>
    <ul class="menu-list">
      <li>
        <%= navigation_item @conn, :user, [only: [:edit_password, :update_password]], :a, href: Routes.user_path(@conn, :edit_password) do %>Password<% end %>
      </li>
      <li>
        <%= navigation_item @conn, :ssh_key, [], :a, href: Routes.ssh_key_path(@conn, :index) do %>SSH keys<% end %>
      </li>
      <li>
        <a class="has-text-grey-light">GPG keys</a>
      </li>
    </ul>
  </aside>
  <div class="column">
    <%= render_inner_layout(@conn, assigns) %>
  </div>
<% end %>
