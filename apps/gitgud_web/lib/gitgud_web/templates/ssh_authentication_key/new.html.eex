<h2 class="subtitle">Add a new SSH key</h1>

<%= form_for @changeset, ssh_authentication_key_path(@conn, :create), [as: :ssh_key], fn f -> %>
  <div class="field">
    <%= label f, :name, class: "label" %>
    <div class="control">
      <%= text_input f, :name, class: "input" %>
    </div>
    <%= error_tag f, :name %>
  </div>

  <div class="field">
    <%= label f, :data, class: "label" %>
    <div class="control">
      <%= textarea f, :data, class: "textarea" %>
    </div>
    <%= error_tag f, :data %>
  </div>

  <div class="field">
    <%= submit "Add SSH key", class: "button is-link" %>
  </div>
<% end %>
